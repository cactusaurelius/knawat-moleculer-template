{
  "name": "moleculer-knawat-template",
  "version": "0.0.0",
  "description": "My Moleculer-based microservices project",
  "author": "",
  "engines": {
    "node": ">= 14.x.x"
  },
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "dev": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --envfile ./deploy/docker/.env --hot --repl --config moleculer.config.ts services/**/*.service.ts",
    "start": "moleculer-runner --config build/moleculer.config.js",
    "cli": "moleculer connect TCP",
    "ci": "NODE_ENV=test jest --watch",
    "postinstall": "npm i moleculer-cli -g ||",
    "test": "NODE_ENV=test jest --coverage",
    "test:integration": "npm t integration",
    "test:unit": "npm t unit",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --ext .ts . --fix",
    "prettier": "prettier services/*.ts utilities/**/*.ts *.ts --write",
    "remove:web": "npm remove @types/lodash @types/supertest openapi-types supertest lodash moleculer-web & rm services/api.service.ts utilities/mixins/openapi.mixin.ts deploy/k8s/k8s.yaml deploy/k8s/api-deployment.yaml ",
    "remove:db": "npm remove @types/mongoose moleculer-db moleculer-db-adapter-mongoose mongoose & rm utilities/models utilities/mixins/mongo.mixin.ts"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "devDependencies": {
    "@jest/types": "^26.6.2",
    "@knawat/types": "latest",
    "@shopify/eslint-plugin": "^39.0.3",
    "@types/jest": "^26.0.19",
    "@types/lodash": "^4.14.165",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^14.14.14",
    "@types/supertest": "^2.0.10",
    "dotenv": "^8.2.0",
    "eslint": "^7.16.0",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "moleculer-decorators": "^1.3.0",
    "moleculer-repl": "^0.6.4",
    "openapi-types": "^7.0.1",
    "prettier": "^2.2.1",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@moleculer/lab": "^0.6.0",
    "ioredis": "^4.19.4",
    "lodash": "^4.17.20",
    "moleculer": "^0.14.11",
    "moleculer-db": "^0.8.11",
    "moleculer-db-adapter-mongoose": "^0.8.9",
    "moleculer-web": "^0.9.1",
    "mongoose": "^5.11.8",
    "nats": "^1.4.12"
  }
}
